---
const { title, preview, image } = Astro.props;
---

<div class="container">
  <img src={image} />
  <div class="text-container">
    <h1>{title}</h1>
    <p>{preview}</p>
  </div>
</div>

<style>
  .container {
    display: flex;
    padding: 0.75rem 0;
    gap: 1rem;
  }

  img {
    object-fit: cover;
  }

  .text-container {
    display: flex;
    flex-direction: column;
  }

  .text-container p {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
  }
</style>
