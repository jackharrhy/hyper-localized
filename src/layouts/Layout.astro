---
import NavLink from "../components/NavLink.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;

import "../base.css";
import Weather from "../components/Weather";
import Time from "../components/Time";
---

<!DOCTYPE html>
<html lang="en" class="h-full bg-sand-500">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JF7N6Y3WPG"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-JF7N6Y3WPG");
    </script>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ‘¶</text></svg>"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Caslon+Text:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="node_modules/@glidejs/glide/dist/css/glide.core.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"
    ></script>
    <title>hyper-localized - {title}</title>
  </head>
  <body class="flex flex-col h-full text-dark-500 font-body">
    <div
      class="flex justify-center items-center py-4 h-28 bg-sand-400 text-3xl font-extrabold border-b border-clay-500"
    >
      <div
        class="absolute left-0 px-8 font-display text-primary-500 text-center"
      >
        <Time client:only="react" />
      </div>
      <a href="/">
        <h1 class="text-primary-500 font-display text-6xl h-[4.3rem]">
          hyper-localized
        </h1>
      </a>
      <div
        class="absolute right-0 px-8 font-display text-primary-500 text-center"
      >
        <Weather client:only="react" />
      </div>
    </div>
    <div class="flex flex-col px-8 sm:px-16 xl:px-[20vw]">
      <nav class="flex justify-around text-center">
        <NavLink href="/videos/">videos</NavLink>
        <NavLink href="/news/">news</NavLink>
        <NavLink href="/shop/">shop</NavLink>
        <NavLink href="/about/">about</NavLink>
      </nav>
      <main class="flex flex-col flex-grow border-clay-500 border">
        <slot />
      </main>
      <footer
        class="flex flex-wrap pt-2 pb-3 px-2 justify-around items-center border-clay-500 border-x border-b"
      >
        <p class="text-lg underline w-full text-center">Contact</p>
        <p>-phone number-</p>
        <p>-email address-</p>
        <p>-messenger pigeon-</p>
      </footer>
    </div>
  </body>
</html>

<script>
  import Glide from "@glidejs/glide";

  new Glide(".glide").mount();
</script>
