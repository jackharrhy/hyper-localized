---
import HomepageStory from "../components/HomepageStory.astro";
import { lorem } from "../fixtures/lorem";
import Layout from "../layouts/Layout.astro";
---

<Layout title="home">
  <swiper-container class="carousel" speed="500" loop="true" autoplay="true">
    <swiper-slide>slide 1</swiper-slide>
    <swiper-slide>slide 2</swiper-slide>
    <swiper-slide>slide 3</swiper-slide>
    <swiper-slide>slide 4</swiper-slide>
  </swiper-container>
  <div class="news-container">
    <div class="section-header">
      <h1>News</h1>
    </div>
    <div class="big-story">
      <HomepageStory
        title="Stick man lost in white void"
        preview={lorem}
        image="https://i.imgur.com/0PsgEpi.png"
      />
    </div>
    <div class="aside-1">
      <HomepageStory
        title="Stick man lost in white void"
        preview={lorem}
        image="https://i.imgur.com/0PsgEpi.png"
      />
    </div>
    <div class="aside-2">
      <HomepageStory
        title="Stick man lost in white void"
        preview={lorem}
        image="https://i.imgur.com/0PsgEpi.png"
      />
    </div>
  </div>
</Layout>

<style>
  swiper-container {
    height: 12rem;
    width: 100%;
    border-left: 1px solid black;
    border-right: 1px solid black;
    border-bottom: 1px solid black;
  }

  swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .news-container {
    display: grid;
    flex-grow: 1;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 3em 1fr 1fr;
    grid-auto-columns: 1fr;
    gap: 0px 0px;
    grid-auto-flow: row;
    grid-template-areas:
      "section-header section-header"
      "big-story big-story"
      "aside-1 aside-2";
  }

  .section-header {
    grid-area: section-header;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .section-header,
  .big-story,
  .aside-1,
  .aside-2 {
    border-left: 1px solid black;
    border-right: 1px solid black;
    border-bottom: 1px solid black;
  }

  .big-story,
  .aside-1,
  .aside-2 {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .big-story {
    grid-area: big-story;
  }

  .aside-1 {
    grid-area: aside-1;
    border-right: none;
  }

  .aside-2 {
    grid-area: aside-2;
  }

  .aside-1,
  .aside-2 {
    font-size: 0.75rem;
  }
</style>
