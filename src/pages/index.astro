---
import { getCollection } from "astro:content";
import Article from "../components/Article.astro";
import { lorem } from "../fixtures/lorem";
import Layout from "../layouts/Layout.astro";

const [latestNews, secondLatestNews, thirdLatestNews] = (
  await getCollection("news")
).reverse();
---

<Layout title="home">
  <swiper-container
    class="h-[16rem] w-full"
    speed="500"
    loop="true"
    autoplay="true"
    pagination="true"
  >
    <swiper-slide class="flex justify-center items-center">slide 1</swiper-slide
    >
    <swiper-slide class="flex justify-center items-center">slide 2</swiper-slide
    >
    <swiper-slide class="flex justify-center items-center">slide 3</swiper-slide
    >
    <swiper-slide class="flex justify-center items-center">slide 4</swiper-slide
    >
  </swiper-container>
  <div class="flex justify-center items-center border-clay-500 border-y">
    <h1 class="text-2xl py-2 font-medium">NEWS</h1>
  </div>
  <div class="border-clay-500 border-b">
    <Article
      variant="large"
      slug={latestNews.slug}
      title={latestNews.data.title}
      preview={lorem}
      image={latestNews.data.image}
    />
  </div>
  <div class="flex">
    <div class="border-clay-500 border-r w-1/2">
      <Article
        slug={secondLatestNews.slug}
        title={secondLatestNews.data.title}
        preview={lorem}
        image={secondLatestNews.data.image}
      />
    </div>
    <div class="w-1/2">
      <Article
        slug={thirdLatestNews.slug}
        title={thirdLatestNews.data.title}
        preview={lorem}
        image={thirdLatestNews.data.image}
      />
    </div>
  </div>
  <div class="flex border-clay-500 border-t">
    <div
      class="flex flex-col w-1/2 justify-center items-center border-clay-500 border-r"
    >
      <img src="https://i.imgur.com/g9fFNs9.png" />
      <p>watch our new video!</p>
    </div>
    <div class="flex flex-col w-1/2">
      <h2>breaking news!</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>
  </div>
  <div class="flex justify-center items-center border-clay-500 border-y">
    <h1 class="text-2xl py-2 font-medium">SHOP</h1>
  </div>
  <div class="text-center p-4">
    <h1 class="text-3xl">HYPER-LOCALIZED Vol.1</h1>
    <h2>A MONTHLY SUB-BASED ZINE ... BUY IT!</h2>
  </div>
  <div>
    <div>Zines</div>
    <div>Apparel</div>
    <div>Prints</div>
  </div>
</Layout>
